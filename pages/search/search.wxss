/* pages/search/search.wxss */
.top{
  background-color: white;
  display: flex;
  flex-direction: row;
  margin:10rpx 0 30rpx 0;
}
.search{
  width: 80%;
  height: 32px;
  display: flex;
  margin-left: 5%;  
  border: 1px solid white;
  border-radius: 50rpx;
  background-color:  rgb(241, 241,243);
}

.search .search_icon{
    margin: 20rpx;
}

.search input{
  display: inline-block;
  margin-right: 10px;
  width: 80%;
  font-size: 30rpx;
  vertical-align: middle;
}
.search_bt{
  height: 32px;
  width: 15%;
  margin-left: 10px;
  font-size: 24rpx;
  background-color: rgb(27, 96, 141);
  color:rgb(78, 180, 167);
  border: 1px solid white;
  border-radius: 50rpx;
}
