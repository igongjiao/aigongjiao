}

.middle .text{
  height: 80rpx;
  width: 100%;
  padding:30rpx 0 0 30rpx;
  vertical-align: middle;
  background-color: rgb(250,250,250);
  font-size:30rpx;
  color:rgb(210,210,210);
}

.middle .place{
  display: flex;
  flex-direction: row;
